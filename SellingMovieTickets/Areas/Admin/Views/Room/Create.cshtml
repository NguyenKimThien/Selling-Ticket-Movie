@using SellingMovieTickets.Areas.Admin.Models.ViewModels.Room
@model CreateRoom
@{
    ViewData["Title"] = "Create Room";
}

@section naviheader {
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a asp-controller="HomeDashboard" asp-action="Index" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a asp-controller="Room" asp-action="Index" class="nav-link">Phòng chiếu</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Thêm mới</a>
        </li>
    </ul>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm mới phòng chiếu</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Phòng chiếu</a></li>
                    <li class="breadcrumb-item active">Thêm mới</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin thêm mới phòng chiếu</h3>
            <div class="card-body">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="bs-stepper-content">
                        <div id="logins-part" class="content" role="tabpanel" aria-labelledby="logins-part-trigger">
                            <div class="form-group">
                                <label></label>
                            </div>
                            <div class="form-group">
                                <label for="Title">Số Phòng</label>
                                <input asp-for="RoomNumber" class="form-control" placeholder="Số phòng" title="RoomNumber" />
                                <span asp-validation-for="RoomNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="RowNumber">Số hàng</label>
                                <input asp-for="RowNumber" class="form-control" placeholder="Số hàng" title="RowNumber"></input>
                                <span asp-validation-for="RowNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="NumberOfSeats">Số ghế 1 hàng</label>
                                <input asp-for="NumberOfSeats" class="form-control" placeholder="Số ghế 1 hàng" title="NumberOfSeats"></input>
                                <span asp-validation-for="NumberOfSeats" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="SelectedStatusRoom">Chọn định dạng ngôn ngữ phim</label>
                                <select asp-for="SelectedStatusRoom" asp-items="Model.StatusRooms" class="form-control">
                                    <option value="">--Chọn trạng thái phòng chiếu--</option>
                                </select>
                                <span asp-validation-for="SelectedStatusRoom" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <a asp-action="Index" class="btn btn-danger">Quay lại</a>
                                <button class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
</section>
 
@if (TempData["Error"] != null)
{
    <script>
        toastr.error('@TempData["Error"]');
    </script>
}

