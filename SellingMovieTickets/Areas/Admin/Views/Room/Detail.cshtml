@using SellingMovieTickets.Areas.Admin.Models.ViewModels.Movie
@using SellingMovieTickets.Areas.Admin.Models.ViewModels.Room
@using SellingMovieTickets.Models.Enum
<link href="~/assetsadmin/styles/image_index.css" rel="stylesheet" />
@model RoomViewModel
@{
    ViewData["Title"] = "Detail Room";
}

@section naviheader {
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a asp-controller="HomeDashboard" asp-action="Index" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a asp-controller="Room" asp-action="Index" class="nav-link">Phòng</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Chi tiết</a>
        </li>
    </ul>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Chi tiết phim</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Phòng</a></li>
                    <li class="breadcrumb-item active">Chi tiết</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin phòng</h3>
            <div class="card-body">
                <form asp-action="Detail" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div id="logins-part" class="content" role="tabpanel" aria-labelledby="logins-part-trigger">
                        <div class="form-group">
                            <label></label>
                        </div>
                        <div class="form-group">
                            <label for="Name">Tên phòng</label>
                            <input asp-for="RoomNumber" readonly class="form-control" placeholder="Tên phòng" title="Name" />
                        </div>
                        <div class="form-group">
                            <label for="Name">Số ghế 1 hàng</label>
                            <input asp-for="NumberOfSeats" readonly class="form-control" placeholder="" title="" />
                        </div>
                        <div class="form-group">
                            <label for="RowNumber">Số hàng</label>
                            <input asp-for="RowNumber" readonly class="form-control" placeholder="" title="" />
                        </div>
                        <div class="form-group">
                            <label for="StatusRoom">Trạng thái</label>
                            <input asp-for="StatusRoom" readonly class="form-control" placeholder="" title="" />
                        </div>

                        <div class="form-group">
                            <a asp-action="Index" class="btn btn-danger">Quay lại</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>


@if (TempData["Error"] != null)
{
    <script>
        toastr.error('@TempData["Error"]');
    </script>
}

