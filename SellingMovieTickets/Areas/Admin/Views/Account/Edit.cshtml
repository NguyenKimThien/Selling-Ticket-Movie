@using SellingMovieTickets.Areas.Admin.Models.ViewModels.Accounts
<link href="~/assetsadmin/styles/image_index.css" rel="stylesheet" />

@model UpdateAccount
@{
    ViewData["Title"] = "Update Account";
}

@section naviheader {
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a asp-controller="HomeDashboard" asp-action="Index" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a asp-controller="Account" asp-action="Index" class="nav-link">Tài khoản</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Cập nhật</a>
        </li>
    </ul>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Cập nhật Tài khoản</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Tài khoản</a></li>
                    <li class="breadcrumb-item active">Cập nhật</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin tài khoản</h3>
            <div class="card-body">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label></label>
                    </div>
                    <div class="form-group">
                        <label for="Username">UserName</label>
                        <input asp-for="User.Username" class="form-control" placeholder="Nhập tên Người dùng" />
                        <span asp-validation-for="User.Username" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="Email">Email</label>
                        <input asp-for="User.Email" class="form-control" placeholder="Nhập Email" />
                        <span asp-validation-for="User.Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="PhoneNumber">Số điện thoại</label>
                        <input asp-for="User.PhoneNumber" class="form-control" placeholder="Nhập số điện thoại" />
                        <span asp-validation-for="User.PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="FullName">Họ và tên</label>
                        <input asp-for="User.FullName" class="form-control" placeholder="Nhập họ và tên" />
                        <span asp-validation-for="User.FullName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="Gender">Giới tính</label>
                        <select asp-for="User.Gender" class="form-control">
                            <option value="">Chọn giới tính</option>
                            <option value="Male">Nam</option>
                            <option value="Female">Nữ</option>
                            <option value="Other">Khác</option>
                        </select>
                        <span asp-validation-for="User.Gender" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="ImageUpload">Ảnh đại diện</label>
                        <input asp-for="User.ImageUpload" class="form-control-file" title="Tải lên hình ảnh" />
                        <span asp-validation-for="User.ImageUpload" class="text-danger"></span>
                        <img id="imageFirst" class="style_imageAdmin"
                             src="@(string.IsNullOrEmpty(Model.User.Avatar) ? "/media/accounts/avatar_default.jpg" : Model.User.Avatar)">
                        <img id="imgpreview" class="pt-2 style_imageAdmin" />
                    </div>

                    <div class="form-group">
                        <label for="Roles">Roles</label>
                        <select asp-for="Role" class="form-control" asp-items="ViewBag.Roles">
                        </select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <a asp-action="Index" class="btn btn-danger">Quay lại</a>
                        <button class="btn btn-primary">Update</button>
                    </div>
                </form>
            </div>
        </div>
</section>


<script>
    $("#User_ImageUpload").change(function () {
        $("#imageFirst").hide();
        readURL(this);
    })
</script>

@if (TempData["Error"] != null)
{
    <script>
        toastr.error('@TempData["Error"]');
    </script>
}
