@using SellingMovieTickets.Models.ViewModels.Users
@model LoginAccount
@{
    ViewData["Title"] = "Đăng nhập";
}

<section style="margin-top: 180px">
    <div class="container">
        <div class="row" style="justify-content: center">
            <div class="col-sm-8 col-sm-offset-1">
                <div class="login-form">
                    <h2>Đăng nhập</h2>
                    <form asp-action="Login" asp-controller="Account">
                        <div class="form-group">
                            <label>Tên đăng nhập</label>
                            <input asp-for="Username" class="form-control" />
                            <span asp-validation-for="Username" class="text-danger" />
                        </div>
                        <div class="form-group">
                            <label>Mật khẩu</label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger" />
                        </div>
                        <div class="d-flex justify-content-end mb-1">
                            <a asp-controller="Account" asp-action="ForgotPassword" class="forgot-password">Quên mật khẩu?</a>
                        </div>
                        <button class="btn btn-default">Đăng nhập</button>
                        <div class="text-center mb-2 mt-2" style="font-size: 16px;">
                            <span>Hoặc</span>
                        </div>
                        <a asp-action="LoginWithGoogle" asp-controller="Account" type="button" class="btn btn-danger w-100 d-flex align-items-center justify-content-center mb-3">
                            <i class="fab fa-google me-2 mr-2"></i>Đăng nhập bằng Google
                        </a>
                        <div class="box_optionRegister">
                            <p class="text-white">
                                Bạn chưa có tài khoản?
                            </p>
                            <a asp-action="Register" asp-controller="Account" class="optionRegisterItem"> Đăng ký</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

