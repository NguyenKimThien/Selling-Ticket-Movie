@using SellingMovieTickets.Areas.Admin.Models.ViewModels.Adv
@using SellingMovieTickets.Models.Enum
<link href="~/assetsadmin/styles/image_index.css" rel="stylesheet" />

@model IEnumerable<AdvViewModel>
@{
    ViewData["Title"] = "Adv Listed -";
    Paginate pager = new Paginate();

    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

@section naviheader {
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a asp-controller="HomeDashboard" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Quảng cáo</a>
        </li>
    </ul>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Danh sách quảng cáo</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Quảng cáo</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Quản lý quảng cáo</h3>
            <div class="card-tools">
                <a asp-controller="Adv" asp-action="Create" class="btn btn-primary">Thêm mới</a>
                <a class="btn btn-danger" id="btnDeleteAll">Xóa</a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-6">
                    <form asp-action="Index" method="get">
                        <div class="input-group input-group-sm">
                            <input type="text" name="searchText" class="form-control" value="@ViewBag.SearchText" />
                            <span class="input-group-append">
                                <button class="btn btn-info btn-flat">Tìm kiếm</button>
                            </span>
                        </div>
                    </form>
                </div>
            </div>
            <table class="table table-hover" id="myTable">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="SelectAll" /></th>
                        <th>STT</th>
                        <th>Tên quảng cáo</th>
                        <th>Description</th>
                        <th>Image</th>
                        <th>Link</th>
                        <th>Hiển thị</th>
                        <th>Ngày tạo</th>
                        <th>Ngày sửa</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = ((pageNo - 1) * pager.PageSize) + 1;
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><input type="checkbox" class="cbkItem" value="@item.Id" /></td>
                                <td>@i</td>
                                <td>@item.Title</td>
                                <td>@Html.Raw(item.Description)</td>
                                <td><img src="@item.Image" class="productImageIndex"></td>
                                <td>@item.Link</td>
                                <td>
                                    <input type="checkbox" class="toggle-status" data-id="@item.Id" @(item.Status == Status.Show ? "checked" : "") />
                                </td>
                                <td>@item.CreateDate</td>
                                <td>@item.ModifiedDate</td>
                                <td>
                                    <a asp-action="Edit" asp-controller="Adv" asp-route-Id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                                    <a asp-action="Delete" asp-controller="Adv" asp-route-Id="@item.Id" class="btn btn-danger btn-sm confirmDeletion">Delete</a>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">Không có bản ghi nào</td>
                        </tr>
                    }
                </tbody>
            </table>
            <partial name="_Paging" model="@pager" />
        </div>
    </div>
</section>

<script>
    $(document).ready(function () {
        $('body').on('click', '#btnDeleteAll', function (e) {
            e.preventDefault();
            var str = "";
            var checkbox = $(this).parents('.card').find('tr td input.cbkItem');
            var i = 0;
            checkbox.each(function () {
                if (this.checked) {
                    $(this).attr('selected', 'checked');
                    var _id = $(this).val();
                    if (i === 0) {
                        str += _id;
                    } else {
                        str += ',' + _id;
                    }
                    i++;
                } else {
                    $(this).attr('selected', '');
                }
            });

            if (str.length > 0) {
                Swal.fire({
                    title: "Bạn có chắc chắn không?",
                    text: "Bạn sẽ không thể hoàn tác hành động này!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Vâng, xóa nó!",
                    cancelButtonText: "Hủy"
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '@Url.Action("DeleteAll", "Adv")',
                            type: 'POST',
                            data: { ids: str },
                            success: function (response) {
                                if (response.success) {
                                    Swal.fire({
                                        title: "Đã xóa!",
                                        text: "Các bản ghi của bạn đã được xóa.",
                                        icon: "success"
                                    }).then(() => {
                                        location.reload();
                                    });
                                } else {
                                    Swal.fire({
                                        title: "Xóa thất bại!",
                                        text: "Có lỗi xảy ra khi xóa các bản ghi.",
                                        icon: "error"
                                    });
                                }
                            },
                            error: function () {
                                Swal.fire({
                                    title: "Có lỗi xảy ra!",
                                    text: "Vui lòng thử lại sau.",
                                    icon: "error"
                                });
                            }
                        });
                    }
                });
            }
        })

        $('body').on('change', '#SelectAll', function () {
            var checkStatus = this.checked;
            var checkbox = $(this).parents('.card-body').find('tr td input.cbkItem');
            checkbox.each(function () {
                this.checked = checkStatus;
                if (this.checked) {
                    checkbox.attr('selected', 'checked');
                } else {
                    checkbox.attr('selected', '');
                }
            })
        });

        $('.toggle-status').change(function () {
            var id = $(this).data('id');
            var isChecked = $(this).is(':checked');
            var status = isChecked ? 1 : 0;

            $.ajax({
                url: '@Url.Action("UpdateStatus", "Adv")',
                type: 'POST',
                data: { id: id, status: status },
                success: function (response) {
                    if (response.success) {
                        Swal.fire({
                            text: "Cập nhật trạng thái thành công!",
                            icon: "success"
                        });
                    } else {
                        Swal.fire({
                            text: "Cập nhật trạng thái thất bại!",
                            icon: "error"
                        });
                    }
                },
                error: function () {
                    Swal.fire({
                        text: "Có lỗi xảy ra khi cập nhật trạng thái!",
                        icon: "error"
                    });
                }
            });
        });

    });
</script>

